{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Describes a receiver",
  "title": "Receiver resource",
  "type": "object",
  "required": [
    "sender_id",
    "transport_params"
  ],
  "properties": {
    "sender_id": {
      "description": "ID of the Sender subscribed to by this Receiver",
      "type": ["string", "null"],
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
      "default": null
    },
    "session_description": {
      "type": "object",
      "default": null,
      "properties": {
        "type": {
          "type":"string",
          "description": "e.g. application/sdp",
          "pattern": "^[^\\s\\/]+\\/[^\\s\\/]+$"
        },
        "data": {
          "description": "string providing connection and stream format parameters. If provided, the information contained in this string will override all user-configuration of parameters in the transport_params.  For RTP receivers, this string will be in SDP format",
          "type": ["string", "null"],
          "default": null
        },
        "by_reference": {
          "description": "data provides a reference to the session_description string rather than the data itself",
          "type": "boolean",
          "default": false
        }
      }
    },
    "transport_params": {
      "description": "Transport-specific parameters",
      "oneOf": [
        { "$ref": "v1.0_receiver_transport_params_rtp.json" },
        { "$ref": "v1.0_receiver_transport_params_dash.json" }
      ]
    }
  }
}
